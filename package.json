{
  "name": "Remote-Scoreboard-Host",
  "version": "0.1.0",
  "main": "index.js",
  "author": "b3nd3r_ssbm",
  "description": "GPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Remote Scoreboard Host",
    "appId": "com.b3nd3rssbm.RemoteScoreboardHost",
    "files": [
      "index.html",
      "index.js",
      "package.json",
	  "server.js",
	  "p5.min.js",
	  "renderer.js",
	  "./win-icons",
	  "style.css"
    ],
    "artifactName": "Remote-Scoreboard-Host$-{version}-${os}.${ext}",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "portable",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "dmg": {
      "icon": "./icon.png"
    },
    "nsis": {
      "unicode": "false"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/b3nd3r-ssbm/Remote-Stream-Scoreboard.git"
  },
  "dependencies": {
    "ejs": "^3.1.3"
  },
  "devDependencies": {
    "electron": "^9.1.1",
    "electron-builder": "^22.8.0"
  }
}
